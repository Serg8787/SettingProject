<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/player_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="1"
            app:entries="@array/favoruite_genre_game"
            app:entryValues="@array/favoruite_genre_game"
            app:key="favoruite_jenre_list"
            app:title="Your Favoriute Jenre Game"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:summary="Click to Open my Google"
            app:title="Website">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.google.com.ua/?hl=ru" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory app:title="Game Settings">
        <SwitchPreference
            android:defaultValue="true"
            android:summary="Click to Switch On or Off"
            android:title="Graphics low/high"
            app:key="graphics" />

        <SwitchPreference
            android:defaultValue="true"
            android:summary="Click to Switch On or Off"
            android:title="AutoSave"
            app:key="autosave" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Main Settings">

    <ListPreference
        app:defaultValue="1"
        app:entries="@array/dark_mode_entries"
        app:entryValues="@array/dark_mode_values"
        app:key="dark_mode"
        app:title="Theme"
        app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>