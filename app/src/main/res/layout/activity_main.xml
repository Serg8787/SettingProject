<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/playerpreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="NickName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Nick Game"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLabelFavoruiteJanre"
        app:layout_constraintTop_toTopOf="@+id/tvLabelName" />

    <TextView
        android:id="@+id/tvFavoruiteGameGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Hello World!"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelFavoruiteJanre"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/tvLabelFavoruiteJanre"
        app:layout_constraintTop_toTopOf="@+id/tvLabelFavoruiteJanre" />

    <TextView
        android:id="@+id/tvGraphics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvlabelGrafics"
        app:layout_constraintEnd_toEndOf="@+id/tvFavoruiteGameGenre"
        app:layout_constraintStart_toEndOf="@+id/tvlabelGrafics"
        app:layout_constraintTop_toTopOf="@+id/tvlabelGrafics" />

    <TextView
        android:id="@+id/tvAutoSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelAutoSave"
        app:layout_constraintEnd_toEndOf="@+id/tvGraphics"
        app:layout_constraintStart_toEndOf="@+id/tvLabelAutoSave"
        app:layout_constraintTop_toTopOf="@+id/tvLabelAutoSave" />

    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/tvAutoSave"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvLabelFavoruiteJanre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="FavoruiteJenre"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelName"
        app:layout_constraintStart_toStartOf="@+id/tvLabelName"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelName" />

    <TextView
        android:id="@+id/tvlabelGrafics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Graphics"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelFavoruiteJanre"
        app:layout_constraintStart_toStartOf="@+id/tvLabelFavoruiteJanre"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelFavoruiteJanre" />

    <TextView
        android:id="@+id/tvLabelAutoSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="AutoSave"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvlabelGrafics"
        app:layout_constraintStart_toStartOf="@+id/tvlabelGrafics"
        app:layout_constraintTop_toBottomOf="@+id/tvlabelGrafics" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Language"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvLabelAutoSave"
        app:layout_constraintStart_toStartOf="@+id/tvLabelAutoSave"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelAutoSave" />


</androidx.constraintlayout.widget.ConstraintLayout>